<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <title>MenStyle - Sửa banner</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        margin: 0;
        font-family: "Segoe UI", sans-serif;
        background: #f8f9fa;
        display: flex;
      }

      .sidebar {
        width: 240px;
        min-height: 100vh;
        background: #fff;
        padding: 30px 20px;
        box-shadow: 2px 0 6px rgba(0, 0, 0, 0.05);
        position: fixed;
        top: 0;
        left: 0;
      }

      .sidebar a {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 15px;
        text-decoration: none;
        color: #333;
        font-weight: 500;
        border-radius: 6px;
        margin-bottom: 8px;
        transition: 0.3s;
      }

      .sidebar a:hover {
        background: #111;
        color: #fff;
      }

      .content {
        flex: 1;
        margin-left: 240px;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      header {
        background-color: #111;
        color: white;
        padding: 15px 20px;
        font-size: 22px;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 15px;
      }

      main {
        padding: 30px;
        flex-grow: 1;
      }

      .form-container {
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.06);
      }

      .form-group {
        margin-bottom: 20px;
      }

      .form-label {
        font-weight: 600;
        margin-bottom: 6px;
      }
    </style>
  </head>
  <body>
    <!-- Sidebar -->
    <nav class="sidebar" id="sidebar">
      <a href="/"><i class="bi bi-house"></i><span>Trang chủ</span></a>
      <a href="/products/view"
        ><i class="bi bi-box"></i><span> Sản phẩm</span></a
      >
      <a href="/coupons/view"
        ><i class="bi bi-ticket"></i><span> Phiếu giảm giá</span></a
      >
      <a href="/accounts/view"
        ><i class="bi bi-people"></i><span> Tài khoản</span></a
      >
      <a href="/accounts/admin/orders"
        ><i class="bi bi-receipt-cutoff"></i><span> Đơn hàng</span></a
      >
      <a href="/stats-overview"
        ><i class="bi bi-bar-chart-line"></i><span> Thống kê</span></a
      >
      <a href="/setting/view"
        ><i class="bi bi-gear"></i> <span>Cài đặt</span></a
      >
    </nav>

    <!-- Nội dung -->
    <div class="content">
      <header><i class="bi bi-pencil"></i> MenStyle - Sửa banner</header>

      <main>
        <div class="form-container">
          <h3 class="mb-4">Chỉnh sửa banner</h3>

          <form
            action="/banner/edit/<%= banner._id %>"
            method="POST"
            enctype="multipart/form-data"
          >
            <!-- Tiêu đề -->
            <div class="form-group">
              <label class="form-label">Tiêu đề</label>
              <input
                type="text"
                name="title"
                class="form-control"
                value="<%= banner.title %>"
                required
              />
            </div>

            <!-- Ô nhập hợp nhất -->
            <div class="form-group">
              <label class="form-label">Ảnh (dán link hoặc chọn file)</label>
              <div class="input-group">
                <input
                  type="text"
                  id="imageUnified"
                  class="form-control"
                  placeholder="https://... hoặc chọn file"
                  value="<%= banner.image %>"
                  autocomplete="off"
                />
                <button
                  type="button"
                  class="btn btn-outline-secondary"
                  id="btnPickFile"
                >
                  <i class="bi bi-upload"></i> Chọn file
                </button>
              </div>

              <!-- input file ẩn thực sự upload -->
              <input
                type="file"
                name="imageFile"
                id="imageFile"
                class="d-none"
                accept="image/*"
              />

              <!-- hidden field gửi link (nếu user nhập link) -->
              <input
                type="hidden"
                name="imageLink"
                id="imageLink"
                value="<%= banner.image %>"
              />
            </div>
            <!-- Preview -->
            <div class="form-group">
              <label class="form-label">Xem trước ảnh</label><br />
              <img
                src="<%= banner.image %>"
                id="preview"
                alt="Preview "
                style="border-radius: 8px; max-width: 500px; margin-top: 10px"
              />
            </div>

            <!-- Action buttons -->
            <button type="submit" class="btn btn-success me-2">
              <i class="bi bi-check-circle"></i> Cập nhật
            </button>
            <a href="/banner/view/options" class="btn btn-secondary">Huỷ</a>
          </form>
        </div>
      </main>
    </div>

    <script>
      const unified = document.getElementById("imageUnified");
      const fileInput = document.getElementById("imageFile");
      const linkHidden = document.getElementById("imageLink");
      const preview = document.getElementById("preview");
      const pickBtn = document.getElementById("btnPickFile");

      // Mở hộp chọn file
      pickBtn.addEventListener("click", () => fileInput.click());

      // Khi chọn file
      fileInput.addEventListener("change", () => {
        if (fileInput.files && fileInput.files[0]) {
          const file = fileInput.files[0];
          unified.value = file.name; // hiển thị tên file
          linkHidden.value = ""; // bỏ link
          preview.src = URL.createObjectURL(file);
        }
      });

      // Nhập link
      unified.addEventListener("input", () => {
        const v = unified.value.trim();

        // URL tuyệt đối http/https
        const isHttp =
          v.startsWith("http://") ||
          v.startsWith("https://") ||
          v.startsWith("//");
        // Đường dẫn tương đối /banners/... hoặc /assets/banners/...
        const isRelative = v.startsWith("/");

        if (isHttp || isRelative) {
          linkHidden.value = v;
          fileInput.value = ""; // clear file
          preview.src = v;
        } else if (v === "") {
          linkHidden.value = "";
          // không clear preview vì user có thể chỉ xoá tạm
        }
      });
    </script>
  </body>
</html>

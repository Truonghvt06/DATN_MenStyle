<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>MenStyle - Chi tiết người dùng</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f5f5;
      display: flex;
      min-height: 100vh;
    }

    .sidebar {
      width: 60px;
      height: 100vh;
      background: #fff;
      padding: 20px 10px;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      position: fixed;
      top: 0;
      left: 0;
      transition: width 0.3s ease;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .sidebar.expanded {
      width: 240px;
    }

    .sidebar a {
      text-decoration: none;
      color: #333;
      font-weight: 500;
      padding: 10px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 10px;
      transition: 0.3s;
      width: 100%;
    }

    .sidebar a i {
      font-size: 20px;
    }

    .sidebar a span {
      display: none;
      transition: opacity 0.3s ease;
    }

    .sidebar.expanded a span {
      display: inline;
    }

    .sidebar a:hover {
      background: #111;
      color: #fff;
    }

    .content {
      margin-left: 60px;
      transition: margin-left 0.3s ease;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .content.expanded {
      margin-left: 240px;
    }

    header {
      background-color: #1a1a1a;
      color: #fff;
      padding: 15px 20px;
      font-size: 20px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 15px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    header .toggle-btn {
      background: none;
      border: none;
      color: #fff;
      font-size: 24px;
      cursor: pointer;
    }

    main {
      padding: 30px;
      flex: 1;
    }

    .card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 20px;
    }

    .card-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .card-title i {
      font-size: 20px;
    }

    .info-item {
      margin-bottom: 10px;
      color: #555;
    }

    .info-item strong {
      color: #333;
    }

    .table th, .table td {
      vertical-align: middle;
      text-align: left;
      padding: 8px;
    }

    .table th {
      font-weight: 600;
      color: #333;
    }

    .table td {
      color: #555;
    }

    .avatar-img {
      max-width: 120px;
      border-radius: 8px;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
        width: 240px;
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }

      .content.shifted {
        margin-left: 240px;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <nav class="sidebar" id="sidebar">
    <a href="/" title="Trang chủ"><i class="bi bi-house"></i><span>Trang chủ</span></a>
    <a href="/products/view" title="Sản phẩm"><i class="bi bi-box"></i><span>Sản phẩm</span></a>
    <a href="/coupons/view" title="Phiếu giảm giá"><i class="bi bi-ticket"></i><span>Phiếu giảm giá</span></a>
    <a href="/accounts/view" title="Tài khoản"><i class="bi bi-people"></i><span>Tài khoản</span></a>
    <a href="/orders/view" title="Đơn hàng"><i class="bi bi-receipt-cutoff"></i><span>Đơn hàng</span></a>
    <a href="/stats-overview" title="Thống kê"><i class="bi bi-bar-chart-line"></i><span>Thống kê</span></a>
  </nav>

  <!-- Content -->
  <div class="content" id="main-content">
    <header>
      <button class="toggle-btn" onclick="toggleSidebar()"><i class="bi bi-list"></i></button>
      MenStyle - Chi tiết người dùng
    </header>

    <main>
      <div class="card">
        <div class="card-title"><i class="bi bi-person-circle"></i> Thông tin người dùng</div>
        <p class="text-muted mb-3">Dưới đây là thông tin chi tiết về tài khoản người dùng.</p>
        <div class="row">
          <div class="col-md-6">
            <div class="info-item"><strong>Tên:</strong> <%= user.name %></div>
            <div class="info-item"><strong>Email:</strong> <%= user.email %></div>
            <div class="info-item"><strong>Số điện thoại:</strong> <%= user.phone %></div>
            <div class="info-item"><strong>Giới tính:</strong> <%= user.gender || 'Chưa cung cấp' %></div>
            <div class="info-item"><strong>Ngày sinh:</strong> <%= user.date_of_birth || 'Chưa cung cấp' %></div>
            <div class="info-item"><strong>Cập nhật lần cuối:</strong> <%= new Date(user.updatedAt).toLocaleDateString('vi-VN') %></div>
          </div>
          <div class="col-md-6 text-center">
            <% if (user.avatar) { %>
              <img src="<%= user.avatar %>" alt="Avatar" class="avatar-img" style="max-width: 150px; border-radius: 8px;">
            <% } else { %>
              <div class="text-muted">Không có ảnh đại diện</div>
            <% } %>
          </div>
        </div>
      </div>

      <div class="card mt-4">
        <div class="card-title"><i class="bi bi-cart-fill"></i> Giỏ hàng (<%= user.cart.length %> sản phẩm)</div>
        <% if (user.cart.length > 0) { %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>Hình ảnh</th>
                <th>Sản phẩm</th>
                <th>Màu / Size</th>
                <th>Số lượng</th>
              </tr>
            </thead>
            <tbody>
              <% user.cart.forEach(item => { %>
                <tr>
                  <td>
                    <% if (item.productId && item.productId.variants && item.productId.variants[item.variantIndex] && item.productId.variants[item.variantIndex].image) { %>
                      <img src="<%= item.productId.variants[item.variantIndex].image %>" alt="Variant Image" class="avatar-img" style="max-width: 50px;">
                    <% } else { %>
                      <span>Không có ảnh</span>
                    <% } %>
                  </td>
                  <td><%= (item.productId && item.productId.name) ? item.productId.name : 'Sản phẩm #' + (item.productId || 'Unknown') %></td>
                  <td>
                    <% if (item.productId && item.productId.variants && item.productId.variants[item.variantIndex]) { %>
                      <%= item.productId.variants[item.variantIndex].color || 'Không xác định' %> / <%= item.productId.variants[item.variantIndex].size || 'Không xác định' %>
                    <% } else { %>
                      Không xác định
                    <% } %>
                  </td>
                  <td><%= item.quantity %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-muted">Giỏ hàng trống</p>
        <% } %>
      </div>

      <div class="card mt-4">
        <div class="card-title"><i class="bi bi-heart-fill"></i> Danh sách yêu thích (<%= user.favorites.length %> sản phẩm)</div>
        <% if (user.favorites.length > 0) { %>
          <table class="table table-borderless">
            <thead>
              <tr>
                <th>Sản phẩm</th>
              </tr>
            </thead>
            <tbody>
              <% user.favorites.forEach(item => { %>
                <tr>
                  <td><%= (item.productId && item.productId.name) ? item.productId.name : 'Sản phẩm #' + (item.productId || 'Unknown') %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-muted">Danh sách yêu thích trống</p>
        <% } %>
      </div>
</div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      const content = document.getElementById("main-content");

      sidebar.classList.toggle("expanded");
      content.classList.toggle("expanded");

      if (window.innerWidth <= 768) {
        sidebar.classList.toggle("active");
        content.classList.toggle("shifted");
      }
    }
  </script>
</body>
</html>
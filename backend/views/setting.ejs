<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8" />
  <title>MenStyle - Cài đặt</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
      display: flex;
    }

    .sidebar.collapsed a span {
      display: none;
    }


    .sidebar {
      width: 240px;
      min-height: 100vh;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      padding: 20px 0;
      transition: all 0.3s ease;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 20px;
      color: #333;
      text-decoration: none;
      font-weight: 500;
      transition: 0.3s;
      white-space: nowrap;
    }

    .sidebar a:hover {
      background: #111;
      color: #fff;
    }

    .sidebar a i {
      font-size: 20px;
    }

    .content {
      flex: 1;
      padding: 30px;
      transition: margin-left 0.3s ease;
    }

    header {
      background-color: #111;
      color: #fff;
      padding: 15px 20px;
      font-size: 24px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 30px;
    }

    main {
      padding: 30px;
    }

    .setting-title {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .card-box {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.06);
      text-align: center;
      transition: 0.3s;
    }

    .card-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
    }

    .icon-box {
      width: 50px;
      height: 50px;
      margin: 0 auto 15px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: #fff;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }

      .content.shifted {
        margin-left: 240px;
      }
    }
    .sidebar a.active {
  background-color: #000 !important; /* nền đen */
  color: #fff !important;            /* chữ trắng */
}
.sidebar a.active i {
  color: #fff !important;            /* icon trắng */
}

  </style>
</head>

<body>

  <!-- Sidebar -->
  <nav class="sidebar" id="sidebar">
    <a href="/"><i class="bi bi-house"></i><span>Trang chủ</span></a>
    <a href="/order/by-date"><i class="bi bi-bell"></i><span>Thông báo</span></a>
    <a href="/products/view"><i class="bi bi-box"></i><span> Sản phẩm</span></a>
    <a href="/products/product-types/view"><i class="bi bi-tags"></i><span> Thể loại</span></a>
    <a href="/voucher/view"><i class="bi bi-ticket"></i><span> Phiếu giảm giá</span></a>
    <a href="/accounts/view"><i class="bi bi-people"></i><span> Tài khoản</span></a>
    <a href="/accounts/admin/orders"><i class="bi bi-receipt-cutoff"></i><span> Đơn hàng</span></a>
    <a href="/dashboard/stats-overview"><i class="bi bi-bar-chart-line"></i><span> Thống kê</span></a>
    <a href="/setting/view" class="active"><i class="bi bi-gear"></i> <span>Cài đặt</span></a>
  </nav>
  <!-- Content -->
  <div class="content" id="main-content">
    <header>
      <button class="btn btn-dark" onclick="toggleSidebar()"><i class="bi bi-list"></i></button>
      MenStyle - Cài đặt hệ thống
    </header>

    <main>
      <div class="setting-title mb-4">Trang Cài Đặt</div>

      <div class="row g-4">
        <div class="col-md-4 col-sm-6">
          <div class="card-box">
            <div class="icon-box bg-success"><i class="bi bi-shield-lock"></i></div>
            <h5 class="mt-2 fw-bold">Đổi mật khẩu</h5>
            <p class="text-muted small">Thay đổi mật khẩu đăng nhập</p>
            <a href="/admin/change_password" class="btn btn-success btn-sm mt-2">Đổi mật khẩu</a>
          </div>
        </div>

        <div class="col-md-4 col-sm-6">
          <div class="card-box">
            <div class="icon-box bg-danger"><i class="bi bi-image"></i></div>
            <h5 class="mt-2 fw-bold">Banner quảng cáo</h5>
            <p class="text-muted small">Thêm, sửa hoặc xoá các banner</p>
            <a href="/banner/view/options" class="btn btn-danger btn-sm mt-2">Quản lý banner</a>
          </div>
        </div>
      <div class="col-md-4 col-sm-6">
  <div class="card-box">
    <div class="icon-box bg-warning"><i class="bi bi-box-arrow-right"></i></div>
    <h5 class="mt-2 fw-bold">Đăng xuất</h5>
    <p class="text-muted small">Thoát khỏi hệ thống quản trị</p>
    <button class="btn btn-warning btn-sm mt-2 text-white" onclick="confirmLogout()">Đăng xuất</button>
  </div>
</div>

    </main>
  </div>

  <script>
    function toggleSidebar() {
      const sidebar = document.getElementById("sidebar");
      const main = document.getElementById("main-content");

      sidebar.classList.toggle("collapsed");
      main.classList.toggle("collapsed");

      if (window.innerWidth <= 768) {
        sidebar.classList.toggle("active");
        main.classList.toggle("shifted");
      }
    }
   function confirmLogout() {
  if (confirm("Bạn có chắc muốn đăng xuất không?")) {
    window.location.href = "/admin/logout";
  }
}
  </script>
</body>

</html>
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>MenStyle - Cài đặt</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      display: flex;
    }

    .sidebar.collapsed a span {
  display: none;
}


    .sidebar {
      width: 240px;
      min-height: 100vh;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      padding: 20px 0;
      transition: all 0.3s ease;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 20px;
      color: #333;
      text-decoration: none;
      font-weight: 500;
      transition: 0.3s;
      white-space: nowrap;
    }

    .sidebar a:hover {
      background: #111;
      color: #fff;
    }

    .sidebar a i {
      font-size: 20px;
    }

    .content {
      flex: 1;
      padding: 30px;
      transition: margin-left 0.3s ease;
    }

    header {
      background-color: #111;
      color: #fff;
      padding: 15px 20px;
      font-size: 24px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 30px;
    }

    main {
      padding: 30px;
    }

    .setting-title {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
    }

    .card-box {
      background: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.06);
      text-align: center;
      transition: 0.3s;
    }

    .card-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 20px rgba(0,0,0,0.1);
    }

    .icon-box {
      width: 50px;
      height: 50px;
      margin: 0 auto 15px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      color: #fff;
    }

    @media (max-width: 768px) {
      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .content {
        margin-left: 0;
      }

      .content.shifted {
        margin-left: 240px;
      }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <nav class="sidebar" id="sidebar">
    <a href="/"><i class="bi bi-house"></i><span>Trang chủ</span></a>
    <a href="/products/view"><i class="bi bi-box"></i><span> Sản phẩm</span></a>
    <a href="/voucher/view"><i class="bi bi-ticket"></i><span> Phiếu giảm giá</span></a>
    <a href="/accounts/view"><i class="bi bi-people"></i><span> Tài khoản</span></a>
    <a href="/accounts/admin/orders"><i class="bi bi-receipt-cutoff"></i><span> Đơn hàng</span></a>
    <a href="/dashboard/stats-overview"><i class="bi bi-bar-chart-line"></i><span> Thống kê</span></a>
    <a href="/setting/view"><i class="bi bi-gear"></i> <span>Cài đặt</span></a>
  </nav>
  <!-- Content -->
  <div class="content" id="main-content">
    <header>
      <button id="toggleBtn" class="btn btn-dark"><i class="bi bi-list"></i></button>
      MenStyle - Cài đặt hệ thống
    </header>

    <main class="container my-4">
      <div class="text-center mb-4">
        <h2 class="setting-title">Trang Cài Đặt</h2>
      </div>
    
      <div class="row justify-content-center">
        <!-- Đổi mật khẩu -->
        <div class="col-md-4 mb-4">
          <div class="card-box text-center p-4 border rounded shadow-sm">
            <div class="icon-box bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
              <i class="bi bi-shield-lock fs-4"></i>
            </div>
            <h6 class="mt-3">Đổi mật khẩu</h6>
            <p class="text-muted">Thay đổi mật khẩu đăng nhập</p>
            <a href="/change-password" class="btn btn-outline-success btn-sm">Đổi mật khẩu</a>
          </div>
        </div>
    
        <!-- Banner quảng cáo -->
        <div class="col-md-4 mb-4">
          <div class="card-box text-center p-4 border rounded shadow-sm">
            <div class="icon-box bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
              <i class="bi bi-image fs-4"></i>
            </div>
            <h6 class="mt-3">Banner quảng cáo</h6>
            <p class="text-muted">Thêm, sửa hoặc xoá các banner</p>
            <a href="/banner/view/options" class="btn btn-outline-danger btn-sm">Quản lý banner</a>
          </div>
        </div>
      </div>
    </main>
    
  </div>

  <script>
    const toggleBtn = document.getElementById('toggleBtn');
    const sidebar = document.getElementById('sidebar');
    const content = document.getElementById('content');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
    });

    function toggleVariants(id, collapse = false) {
      const shortDiv = document.getElementById('variant-short-' + id);
      const fullDiv = document.getElementById('variant-full-' + id);

      if (collapse) {
        shortDiv.style.display = 'block';
        fullDiv.style.display = 'none';
      } else {
        shortDiv.style.display = 'none';
        fullDiv.style.display = 'block';
      }
    }
  </script>
</body>
</html>

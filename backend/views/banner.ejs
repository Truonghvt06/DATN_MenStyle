<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>MenStyle - Danh sách Banner</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #f8f9fa;
      display: flex;
    }

    .sidebar {
      width: 240px;
      min-height: 100vh;
      background: #fff;
      padding: 30px 20px;
      box-shadow: 2px 0 6px rgba(0,0,0,0.05);
      position: fixed;
      top: 0;
      left: 0;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 15px;
      text-decoration: none;
      color: #333;
      font-weight: 500;
      border-radius: 6px;
      margin-bottom: 8px;
      transition: 0.3s;
    }

    .sidebar a:hover {
      background: #111;
      color: white;
    }

    .content {
      flex: 1;
      margin-left: 240px;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    header {
      background-color: #111;
      color: white;
      padding: 15px 20px;
      font-size: 22px;
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 15px;
    }

    main {
      padding: 30px;
      flex-grow: 1;
    }

    .table img {
      border-radius: 8px;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }

    .btn-sm {
      margin-right: 5px;
    }
    .sidebar a.active {
  background-color: #000 !important; /* nền đen */
  color: #fff !important;            /* chữ trắng */
}
.sidebar a.active i {
  color: #fff !important;            /* icon trắng */
}

  </style>
</head>
<body>

  <!-- Sidebar -->
  <nav class="sidebar" id="sidebar">
    <a href="/"><i class="bi bi-house"></i><span>Trang chủ</span></a>
    <a href="/order/by-date"><i class="bi bi-bell"></i><span>Thông báo</span></a>
    <a href="/products/view"><i class="bi bi-box"></i><span> Sản phẩm</span></a>
    <a href="/products/product-types/view"><i class="bi bi-tags"></i><span> Thể loại</span></a>
    <a href="/voucher/view"><i class="bi bi-ticket"></i><span> Phiếu giảm giá</span></a>
    <a href="/accounts/view"><i class="bi bi-people"></i><span> Tài khoản</span></a>
    <a href="/accounts/admin/orders"><i class="bi bi-receipt-cutoff"></i><span> Đơn hàng</span></a>
    <a href="/dashboard/stats-overview"><i class="bi bi-bar-chart-line"></i><span> Thống kê</span></a>
    <a href="/setting/view" class="active"><i class="bi bi-gear"></i> <span>Cài đặt</span></a>
  </nav>

  <!-- Nội dung chính -->
  <div class="content">
    <header><i class="bi bi-image"></i> MenStyle - Danh sách banner</header>

    <main>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/banner/add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Thêm banner mới</a>
      </div>

      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th style="width: 20%">Tiêu đề</th>
            <th style="width: 60%">Hình ảnh</th>
            <th style="width: 20%">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% if (banners.length === 0) { %>
            <tr>
              <td colspan="3" class="text-center">Chưa có banner nào</td>
            </tr>
          <% } else { %>
            <% banners.forEach(banner => { %>
              <tr>
                <td><%= banner.title %></td>
                <td>
                  <img src="<%= banner.image %>" alt="Banner" width="100%" style="max-width: 300px;" />
                </td>
                <td>
                  <a href="/banner/edit/<%= banner._id %>" class="btn btn-warning btn-sm">
                    <i class="bi bi-pencil"></i> Sửa
                  </a>
                  <form action="/banner/delete/<%= banner._id %>" method="POST" style="display:inline;">
                    <button onclick="return confirm('Xác nhận xoá banner này?')" class="btn btn-danger btn-sm">
                      <i class="bi bi-trash"></i> Xoá
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </main>
  </div>

</body>
</html>

<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <title>MenStyle - Quản lý Voucher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #f8f9fa;
      display: flex;
    }

    .sidebar.collapsed a span {
      display: none;
    }


    .sidebar {
      width: 240px;
      min-height: 100vh;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      padding: 20px 0;
      transition: all 0.3s ease;
    }

    .sidebar.collapsed {
      width: 60px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 20px;
      color: #333;
      text-decoration: none;
      font-weight: 500;
      transition: 0.3s;
      white-space: nowrap;
    }

    .sidebar a:hover {
      background: #111;
      color: #fff;
    }

    .sidebar a i {
      font-size: 20px;
    }

    .content {
      flex: 1;
      padding: 30px;
      transition: margin-left 0.3s ease;
    }

    header {
      background-color: #111;
      color: #fff;
      padding: 15px 20px;
      font-size: 24px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 15px;
      margin-bottom: 30px;
    }

    n {
      padding: 30px;
      flex-grow: 1;
    }

    .btn-sm {
      margin-right: 5px;
    }

    .table th {
      background-color: #343a40;
      color: white;
      font-weight: 600;
      text-align: center;
    }

    .table td {
      vertical-align: middle;
    }

    .badge-status {
      font-size: 0.85rem;
      padding: 5px 10px;
      border-radius: 0.5rem;
    }

    .badge-true {
      background-color: #198754;
      color: white;
    }

    .badge-false {
      background-color: #dc3545;
      color: white;
    }
    .sidebar a.active {
  background-color: #000 !important; /* nền đen */
  color: #fff !important;            /* chữ trắng */
}
.sidebar a.active i {
  color: #fff !important;            /* icon trắng */
}

  </style>
</head>

<body>
  <nav class="sidebar" id="sidebar">
    <a href="/"><i class="bi bi-house"></i><span>Trang chủ</span></a>
    <a href="/order/by-date"><i class="bi bi-bell"></i><span>Thông báo</span></a>
    <a href="/products/view"><i class="bi bi-box"></i><span> Sản phẩm</span></a>
    <a href="/products/product-types/view"><i class="bi bi-tags"></i><span> Thể loại</span></a>
    <a href="/voucher/view" class="active"><i class="bi bi-ticket"></i><span> Phiếu giảm giá</span></a>
    <a href="/accounts/view"><i class="bi bi-people"></i><span> Tài khoản</span></a>
    <a href="/accounts/admin/orders"><i class="bi bi-receipt-cutoff"></i><span> Đơn hàng</span></a>
    <a href="/dashboard/stats-overview"><i class="bi bi-bar-chart-line"></i><span> Thống kê</span></a>
    <a href="/setting/view"><i class="bi bi-gear"></i> <span>Cài đặt</span></a>
  </nav>
  <div class="content">
    <header>
      <button id="toggleBtn" class="btn btn-dark"><i class="bi bi-list"></i></button>
      MenStyle - Quản lý voucher
    </header>
    <main>
      <!-- Thêm tab chuyển đổi -->
      <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/voucher/add" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Thêm voucher mới</a>
        <div class="d-flex align-items-center">
          <select id="voucherTypeFilter" class="form-select form-select-sm me-2" style="width:140px;">
            <option value="">Tất cả loại</option>
            <option value="order">Đơn hàng</option>
            <option value="shipping">Vận chuyển</option>
          </select>
          <button id="toggleTableBtn" class="btn btn-outline-secondary">Lịch sử sử dụng voucher</button>
        </div>
      </div>

      <!-- Bảng voucher hiện tại -->
      <div id="voucherTable">
        <table class="table table-bordered table-hover align-middle">
          <thead>
            <tr>
              <th>Mã voucher</th>
              <th>Mô tả</th>
              <th>Loại giảm giá</th>
              <th>Kiểu giảm giá</th>
              <th>Giá trị giảm</th>
              <th>Giá trị giảm tối đa</th>
              <th>Đơn tối thiểu</th>
              <th>Số lượng</th>
              <th>Đã dùng</th>
              <th>Bắt đầu</th>
              <th>Kết thúc</th>
              <th>Trạng thái</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            <% if (vouchers.length===0) { %>
              <tr>
                <td colspan="13" class="text-center">Chưa có voucher nào</td>
              </tr>
              <% } else { %>
                <% vouchers.forEach(voucher=> { %>
                  <tr>
                    <td>
                      <%= voucher.code %>
                    </td>
                    <td>
                      <%= voucher.description %>
                    </td>
                    <td>
                      <%= voucher.voucher_scope==='shipping' ? 'Vận chuyển' : 'Đơn hàng' %>
                    </td>
                    <td>
                      <%= voucher.discount_type==='percentage' ? 'Phần trăm' : 'Cố định' %>
                    </td>
                    <td>
                      <%= voucher.discount_value %>
                        <%= voucher.discount_type==='percentage' ? '%' : ' VNĐ' %>
                    </td>
                    <td>
                      <% if (voucher.discount_type==='percentage' ) { %>
                        <%= voucher.max_discount_value ? voucher.max_discount_value.toLocaleString('vi-VN') + 'đ' : '-' %>
                          <% } else { %>
                            -
                            <% } %>
                    </td>
                    <td>
                      <%= voucher.min_order_amount %> VNĐ
                    </td>
                    <td>
                      <%= voucher.quantity %>
                    </td>
                    <td>
                      <%= voucher.used_count %>
                    </td>
                    <td>
                      <%= voucher.date_from ? new Date(voucher.date_from).toLocaleDateString('vi-VN') : '' %>
                    </td>
                    <td>
                      <%= voucher.date_to ? new Date(voucher.date_to).toLocaleDateString('vi-VN') : '' %>
                    </td>
                    <td>
                      <% if (voucher.is_active==true) { %>
                        <span class="badge" style="background:#198754; color:#fff; font-size:1rem; padding:8px 18px;">
                          <i class="bi bi-check-circle-fill"></i> Kích hoạt
                        </span>
                        <% } else { %>
                          <span class="badge" style="background:#dc3545; color:#fff; font-size:1rem; padding:8px 18px;">
                            <i class="bi bi-x-circle-fill"></i> Ẩn
                          </span>
                          <% } %>
                    </td>
                    <td>
                      <% if (voucher.used_count > 0 || !voucher.is_active) { %>
    <button class="btn btn-warning btn-sm" disabled>
      <i class="bi bi-pencil"></i> Sửa
    </button>
  <% } else { %>
    <a href="/voucher/edit/<%= voucher._id %>" class="btn btn-warning btn-sm">
      <i class="bi bi-pencil"></i> Sửa
    </a>
  <% } %>
                    </td>
                  </tr>
                  <% }) %>
                    <% } %>
          </tbody>
        </table>
      </div>

      <!-- Bảng lịch sử voucher (ẩn mặc định) -->
      <div id="voucherHistory" style="display:none;">
        <form class="row g-3 mb-3" method="GET" action="/voucher/view">
          <div class="col-md-3">
            <label class="form-label">Chọn tháng</label>
            <input type="month" name="month" class="form-control" value="<%= (historyFilters && historyFilters.month) ? historyFilters.month : '' %>" />
          </div>
          <div class="col-md-3">
            <label class="form-label">Nhập mã voucher</label>
            <input type="text" name="voucher_code" class="form-control" value="<%= (historyFilters && historyFilters.voucher_code) ? historyFilters.voucher_code : '' %>" placeholder="Nhập mã voucher cần tìm" />
          </div>
          <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Lọc</button>
          </div>
        </form>
        <table class="table table-bordered align-middle">
          <thead>
            <tr>
              <th>Mã voucher</th>
              <th>Số lần sử dụng</th>
              <th>Tổng tiền đã giảm</th>
              <th>Chi tiết</th>
            </tr>
          </thead>
          <tbody>
            <% if (!voucherHistoryStats || voucherHistoryStats.length===0) { %>
              <% if (historyFilters && historyFilters.month) { %>
                <tr>
                  <td colspan="4" class="text-center text-danger fw-bold">
                    Không có voucher được sử dụng trong tháng này
                  </td>
                </tr>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">Chưa có lịch sử sử dụng</td>
                </tr>
              <% } %>
            <% } else { %>
              <% voucherHistoryStats.forEach((vh, idx) => { %>
                <tr>
                  <td><strong><%= vh.voucher_code %></strong></td>
                  <td class="text-center"><%= vh.use_count %></td>
                  <td><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(vh.total_discount || 0) %></td>
                  <td class="text-center">
                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#vh-<%= idx %>">
                      Xem
                    </button>
                  </td>
                </tr>
                <tr class="collapse" id="vh-<%= idx %>">
                  <td colspan="4">
                    <div class="p-3 border rounded bg-white shadow-sm">
                      <div class="table-responsive">
                        <table class="table table-bordered table-striped align-middle mb-0">
                          <thead class="table-dark">
                            <tr>
                              <th class="text-center">Mã đơn</th>
                              <th class="text-center">Ngày tạo</th>
                              <th class="text-center">Khách hàng</th>
                              <th class="text-center">Sản phẩm</th>
                              <th class="text-center">Tạm tính</th>
                              <th class="text-center">Loại voucher</th>
                              <th class="text-center">Số tiền giảm</th>
                              <th class="text-center">Thành tiền</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% (vh.orders || []).forEach((o) => { %>
                              <tr>
                                <td class="text-center fw-bold"><%= o.code %></td>
                                <td class="text-center"><%= new Date(o.createdAt).toLocaleString('vi-VN') %></td>
                                <td class="text-center">
                                  <% if (o.user) { %>
                                    <%= o.user.name || o.user.email || '' %>
                                  <% } %>
                                </td>
                                <td>
                                  <%= (o.productNames || []).slice(0,5).join(', ') %>
                                  <% if ((o.productNames || []).length > 5) { %>
                                    ...
                                  <% } %>
                                </td>
                                <td class="text-end"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(o.subtotal || 0) %></td>
                                <td class="text-center">
                                  <span class="badge <%= o.voucher_type === 'shipping' ? 'bg-success' : 'bg-primary' %>">
                                    <%= o.voucher_type === 'shipping' ? 'Vận chuyển' : 'Đơn hàng' %>
                                  </span>
                                </td>
                                <td class="text-end text-danger fw-bold">
                                  - <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(o.discount || 0) %>
                                </td>
                                <td class="text-end fw-bold">
                                  <%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(o.total_amount || 0) %>
                                </td>
                              </tr>
                            <% }) %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
  <script>
    const toggleBtn = document.getElementById('toggleBtn');
    const sidebar = document.getElementById('sidebar');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('collapsed');
    });

    // Chỉ dùng 1 nút chuyển đổi giữa 2 bảng
    const toggleTableBtn = document.getElementById('toggleTableBtn');
    const voucherTable = document.getElementById('voucherTable');
    const voucherHistory = document.getElementById('voucherHistory');

    toggleTableBtn.onclick = function() {
      if (voucherTable.style.display !== 'none') {
        voucherTable.style.display = 'none';
        voucherHistory.style.display = 'block';
        toggleTableBtn.textContent = 'Quay lại danh sách voucher';
      } else {
        voucherHistory.style.display = 'none';
        voucherTable.style.display = 'block';
        toggleTableBtn.textContent = 'Lịch sử sử dụng voucher';
      }
    };

    // Tự động mở tab Lịch sử nếu có tham số lọc trong URL
    (function autoOpenHistory(){
      const params = new URLSearchParams(window.location.search);
      if (params.has('month') || params.has('voucher_code')) {
        voucherTable.style.display = 'none';
        voucherHistory.style.display = 'block';
        toggleTableBtn.textContent = 'Quay lại danh sách voucher';
      }
    })();

    // Lọc bảng voucher theo loại (client-side)
    document.getElementById('voucherTypeFilter').addEventListener('change', function() {
      const type = this.value;
      document.querySelectorAll('#voucherTable tbody tr').forEach(tr => {
        // Nếu là dòng "Chưa có voucher nào" thì luôn hiển thị
        if (tr.children.length === 1) {
          tr.style.display = '';
          return;
        }
        const scopeTd = tr.children[2];
        if (!type || (type === 'order' && scopeTd.textContent.trim() === 'Đơn hàng') || (type === 'shipping' && scopeTd.textContent.trim() === 'Vận chuyển')) {
          tr.style.display = '';
        } else {
          tr.style.display = 'none';
        }
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Hiển thị alert nếu có lỗi -->
  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <script>
    alert("<%= errorMessage %>");
  </script>
  <% } %>
</body>

</html>
       <!-- Messenger -->
    <intent>
      <action android:name="android.intent.action.VIEW" />
      <data android:scheme="fb" />
    </intent>
    <intent>
      <action android:name="android.intent.action.VIEW" />
      <data android:scheme="fb-messenger" />
    </intent>

    <!-- Zalo -->
    <intent>
      <action android:name="android.intent.action.VIEW" />
      <data android:scheme="zalo" />
    </intent>
